{
  "cluster_name": "nemweb-lab-cluster",
  "spark_version": "15.4.x-scala2.12",
  "node_type_id": "m5.xlarge",
  "driver_node_type_id": "m5.xlarge",
  "autoscale": {
    "min_workers": 1,
    "max_workers": 4
  },
  "autotermination_minutes": 30,
  "enable_elastic_disk": true,
  "spark_conf": {
    "spark.databricks.cluster.profile": "serverless",
    "spark.sql.shuffle.partitions": "auto",
    "spark.databricks.adaptive.autoOptimizeShuffle.enabled": "true",
    "spark.sql.adaptive.enabled": "true"
  },
  "spark_env_vars": {
    "PYSPARK_PYTHON": "/databricks/python3/bin/python3"
  },
  "custom_tags": {
    "project": "nemweb-lab",
    "environment": "development",
    "purpose": "educational"
  },
  "init_scripts": [],
  "cluster_log_conf": {
    "dbfs": {
      "destination": "dbfs:/cluster-logs/nemweb-lab"
    }
  },
  "data_security_mode": "USER_ISOLATION",
  "runtime_engine": "PHOTON",
  "_comment": "Cluster template for NEMWEB Custom Data Source Lab. Requires DBR 15.4+ for Python Data Source API."
}
